<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">


    <!-- Fontawesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    <title>Contact List</title>
    <link rel="stylesheet" href="/css/home.css">

  </head>
  <body>
    <h1>Contact List</h1>

<%  if(type== "updateContact") { var res = update_list;  %>
<script>
        $(document).ready(function(){
            
        $("#updateContactModel").modal('show');
        
        });
    </script>
    <%  } else { var resAll = contact_list;  }%>

  <!-- Modal -->
  <div class="modal fade" id="addContactModel" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Contact Details</h5>
        </div>
        <div class="modal-body">
            <form action="" method="post">

                <input type="text" name="name"  placeholder="Enter Name" required class="inputContact" /> <br><br>
                <input type="text" name="phone" placeholder="Enter Mobile Number" required class="inputContact"/>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" formaction="/create-contact" >Save</button>
                     <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                   </div>
            </form>
        </div>
        
      </div>
    </div>
  </div>

  <div class="modal fade" id="updateContactModel" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Update Contact Details</h5>
        </div>
        <div class="modal-body">
            <form action="" method="post">

                <input type="text" name="name" id="name"  placeholder="Enter Name" required class="inputContact" <% if(type == "updateContact"){%>  value =  <%=res[0].name %> <%}%>/> <br><br>
                <input type="text" name="phone" id="phone" placeholder="Enter Mobile Number" disabled  class="inputContact" <% if(type == "updateContact"){%>  value =  <%=res[0].phone %> <%}%> />
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" formaction="/update-contact" >Update</button>
                     <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                   </div>
            </form>
        </div>
        
      </div>
    </div>
  </div>



<br>

<div class="container-fluid">
    <button type="button" class="btn btn-primary addNewContact" data-toggle="modal" data-target="#addContactModel">
        Add new contact
      </button>
<center>
  <table class="table table-striped " style="margin-top: 15px;">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Phone</th>
        <th scope="col" colspan="2">Action</th>
      </tr>
    </thead>
    <tbody>
      
        <% if(type != "updateContact") { var count=0; for(let i of resAll){ %>
             <tr>
                    <th scope="row"> <%=count+=1; %> </th>
                    <td><%= i.name %></td>
                    <td><%= i.phone %></td>
                    <td><a href="/get-contact-details/<%= i._id %>" ><i class="fa fa-pencil fa-1x" aria-hidden="true"></i></a></td>
                    <td><a href="/delete-contact/<%= i._id %>" ><i class="fa fa-trash fa-1x" aria-hidden="true"></i></a></td>
            </tr>
        <% }} %>
    </tbody>
  </table>

</center>

</div>

    

    <script src="/js/home.js"></script> 

    


   


     
    
  
  </body>
</html>